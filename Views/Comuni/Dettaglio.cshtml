@model ComuneViewModel
<div class="row">
    <div class="col-md-9">
        <h1>@(Model.nomeComune) (Qui metti la provincia)</h1>
        <h2>Regione: <a asp-cpntroller="Comuni" asp-action="Index">@Model.regione</a></h2>
        <h2>Provincia: <a asp-cpntroller="Comuni" asp-action="Index">@Model.provincia</a></h2>
        <h2>Cap: <a asp-cpntroller="Comuni" asp-action="Index">@Model.cap</a></h2>
        <h2>Prefisso: <a asp-cpntroller="Comuni" asp-action="Index">@Model.prefisso</a></h2>
        <br />
        <h2>Abitanti: @Model.abitanti</h2>
        <h2>Codice catastale: @Model.codiceCatastale</h2>
        <br />
        <a class="btn btn-outline-primary" asp-cpntroller="Comuni" asp-action="Index">Torna all'elenco dei comuni</a>
    </div>
    <div class="col-md-3">
        <br />
        <h2>Ripartizione geografica<br />@Model.ripartizioneGeografica</h2>
        <img src="~/Italia/Sud.jpg" width="200">
    </div>
</div>